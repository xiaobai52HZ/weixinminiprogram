/**index.wxss**/
.timebar{
  background-color: #5B2384;
  color: rgb(247, 247, 247);

  border:1px solid black;
  width: 100%;
  height:33.3%;
  display: flex;
  flex-direction: row;
  justify-content:space-between;
}
.containerindex{
  height:auto;
  display: flex;
  flex-direction: column;
  width:30%;
  
  border: 2px rgb(25, 1, 71) solid;
  justify-content: center;
  align-items: center;
  font-size: 10vh;
}
.cdisplay{
  display: flex;
  flex-direction: column;
}
.timeinput{
  display: flex;
  width: 99%;
  flex-direction: row;
  font-size: larger;
  justify-content: space-around;

}
input{
  width:88%;
  size: 5vh;
  align-self: center;
  border:1px white solid;
  /* background-color: rgb(225, 203, 230); */
}
.timebutto{
  width: 5%;
  border-radius: 50%;
  border:1px white solid;
 
}
.planning{
  display: flex;
  flex-direction: column;
  /* align-items: flex-start; */
}
text{
  width: 100%;
  font-family: "楷体";
  /* border:1px solid thistle; */
  background-color: rgba(161, 48, 236, 0.856);
  text-align: center;
}
.ruler{
  
  display:flex;
  flex-direction: row;
  font-size:small;
  justify-content: center;
  align-items: center;
  width: 95%;
}
.picker{
  display: flex;
  flex-direction: row;
  font-size: 40rpx;
  background-color: blueviolet;
  font-family: "楷体";

  justify-content: center;
}
.checkbox{
  display: flex;
  flex-direction: row;
  font-size: 40rpx;
}
.playtime{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}
